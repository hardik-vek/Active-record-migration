<h1>New Book</h1>

<%= form_with model: @book do |form| %>
<div>
<%= form.label :name %><br>
<%= form.text_field :name %>
<% @book.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>
<div>
<%= form.label :price %><br>
<%= form.number_field :price %>
<% @book.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>
</div>
<div>
<%= form.label :author_id %><br>
<%= form.number_field :author_id %>
<% @book.errors.full_messages_for(:author_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>
</div>
<div>
    <%= form.submit %>
  </div>
<% end %>