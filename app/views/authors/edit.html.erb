<h1>Edit the Authors</h1>

<%= form_with model: @author do |form| %>
<div>
<%= form.label :fname %><br>
<%= form.text_field :fname %>
<% @author.errors.full_messages_for(:fname).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>
<div>
<%= form.label :lname %><br>
<%= form.text_field :lname %>
<% @author.errors.full_messages_for(:lname).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>
</div>
<div>
<%= form.label :dob %><br>
<%= form.date_field :dob %>
<% @author.errors.full_messages_for(:dob).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>
</div>
<div>
<%= form.label :email %><br>
<%= form.text_field :email %>
<% @author.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>
</div>
<div>
    <%= form.submit %>
  </div>
<% end %>